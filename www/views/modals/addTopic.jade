div(class='modal fade', id='addTopicModal', tabindex='-1', role='dialog', aria-labelledby='addTopicHeader')
	div(class='modal-dialog', role='document')
		div(class='modal-content')
			div(class='modal-header')
				button(type='button', class='close', data-dismiss='modal', aria-label='Close')
					span(aria-hidden='true') &times;
				h4(class='modal-title', id='addTopicHeader') Add new topic
			div(class='modal-body')
				form(class='form-horizontal')
					div(class='form-group')
						label(class='col-sm-2') Name
						div(class='col-sm-10')
							input(class='form-control', type='text', name='name', placeholder='Topic name')
					div(class='form-group')
						label(class='col-sm-2') Description
						div(class='col-sm-10')
							textarea(class='form-control', name='description', placeholder='Topic description')
			div(class='modal-footer')
				button(type='button', class='btn btn-default', class='js-topic-add' data-dismiss='modal') Save